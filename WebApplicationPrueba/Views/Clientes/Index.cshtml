@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Clientes</h1>
<div>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Clientes")'">Nuevo
        Cliente</button>
</div>
